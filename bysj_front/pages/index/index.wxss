
.banner{
	width: 100%;
	margin-top: 76rpx;
}
.banner image{
	width: 100%;
}
.search{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	width:100%;
	align-items: center;
	padding: 10rpx 0;
	background-color: #f2f2f2;
	position: fixed;
	top:0;
	left: 0;
	z-index: 999;
}
.logo{
	width:44rpx;
	height:30rpx;
}
.input{
	display: flex;
	flex-direction: row;
	align-items: center;
	font-size: 25rpx;
	background-color: #ffffff;
	width:70%;
	padding-left: 10rpx;
	border: 1px solid #eee; 
}
.input input{
	padding-left: 10rpx;
}
.search_icon{
	width: 44rpx;
	height: 44rpx;
}

.category{
	background-color: #f2f2f2;
	width:100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
	padding: 5rpx 0;
}

.newProduct{
	margin-top: 10rpx;
	border-top: 1rpx solid #ccc;
	width: 100%;
}
.newProduct .topic{
	font-weight: 700;
	padding: 10rpx 20rpx;
	color:#242424
}
.newProduct .product{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;

}
.newProduct .product .newProductItem{
	display: flex;
	flex-direction: column;
	width:50%;
	
}
.newProduct .product .newProductItem:nth-child(1){
	border-right: 2px solid #fff;
}
.newProduct .product .newProductItem image{
	 width:100%;
}
.title{
	padding: 10rpx;
	font-size: 32rpx;
	color: #242424;
}
.detail{
	padding: 10rpx;
	font-size: 28rpx;
	color: #666;
}
.price{
	padding: 10rpx;
	font-size: 30rpx;
	color: #ea625b;
}
.new_price{
	padding: 10rpx;
	font-size: 30rpx;
	color: #ea625b;
}
.old_price{
	padding: 10rpx;
	font-size: 30rpx;
	color: rgba(0,0,0,.54);
	text-decoration: line-through;
}
.special_price{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: flex-start;
	
}
.special_product{
	width:100%;
	overflow: hidden
}
.special_product .newProductItem{
	width:50%;
	float: left;
}
.special_product .newProductItem:nth-of-type(1),.special_product .newProductItem:nth-of-type(2){
	width:100%;
	
}

.special_product .newProductItem image{
	width:98%;
}